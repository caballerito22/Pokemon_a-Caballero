<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pokemonDetailsFragment" >

    <ImageView
        android:id="@+id/imgPokemonSpriteDetail"
        android:layout_width="78dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textoPokemonNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgPokemonSpriteDetail"
        tools:layout_editor_absoluteY="19dp" />

    <TextView
        android:id="@+id/textoPokemonSptiteDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textoPokemonNameDetail"
        app:layout_constraintStart_toStartOf="@+id/textoPokemonNameDetail"
        tools:layout_editor_absoluteY="54dp" />

    <TextView
        android:id="@+id/textoPokemonSpecieDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textoPokemonSptiteDetail"
        app:layout_constraintStart_toStartOf="@+id/textoPokemonSptiteDetail"
        tools:layout_editor_absoluteY="87dp" />

</androidx.constraintlayout.widget.ConstraintLayout>